# Database (connection_limit=20 sets the Prisma pool size; pool_timeout=10 avoids stalls)
DATABASE_URL="postgresql://postgres:postgres@localhost:5044/qcmonitor?connection_limit=20&pool_timeout=10"

# Redis
REDIS_URL="redis://localhost:6379"

# MinIO
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="artifacts"

# API
PORT=3001
NODE_ENV=development

# Admin
# Generate with: pnpm --filter @qc-monitor/api admin:seed
ADMIN_SECRET_KEY=your-admin-secret-key

# JWT Auth (minimum 32 characters each)
JWT_SECRET=your-secret-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars

# Default admin user (created by: pnpm db:seed)
DEFAULT_ADMIN_EMAIL=admin@qc-monitor.com
DEFAULT_ADMIN_NAME=System Admin

# App URL (used in password reset links)
APP_URL=http://localhost:3000

# Frontend URL (used for CORS â€” must match your web app origin exactly)
FRONTEND_URL=http://localhost:3000

# Web dashboard (apps/web/.env.local)
NEXT_PUBLIC_ADMIN_KEY=your-admin-secret-key
